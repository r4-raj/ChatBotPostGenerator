# Backend environment variables for ChatBot Post Generator

# Web server
PORT=5000

# MongoDB connection string
MONGO_URI=mongodb+srv://<username>:<password>@<cluster-host>/<database>?retryWrites=true&w=majority&appName=<appName>

# JWT secret used to sign application tokens
JWT_SECRET=replace-with-a-strong-random-secret

# Google OAuth client (if used on backend)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OpenAI API Key
OPENAI_API_KEY=""

#Cloudinary API Key
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""
